{
  "name": "@svelte/language-tools",
  "version": "1.0.0",
  "author": "Svelte Contributors",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "test": "CI=true yarn workspaces run test",
    "watch": "tsc -b -watch",
    "prettier": "prettier --write **/src/**/*.{ts,js}"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged --pattern '**/src/**/*.{ts,js}'"
    }
  },
  "dependencies": {
    "axios": "0.19.2"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1"
  }
}
