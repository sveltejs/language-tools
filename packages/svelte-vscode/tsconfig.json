{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "CommonJS",
        "target": "es2021",
        "moduleResolution": "node",

        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "sourceMap": true,
        "composite": true
    }
}
