{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "CommonJS",
        "target": "es2021",
        "moduleResolution": "node",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"]
}
